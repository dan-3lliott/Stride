@page
@model Stride.Pages.CounselorMain

@{
    Layout = null;
}

<!DOCTYPE html>

<head>
	<title>Stride</title>
	<link rel="shortcut icon" href="images/icons/favicon.ico" type="image/x-icon"/>
	<link rel="stylesheet" type="text/css" href="css/main.css">
	<link rel="stylesheet" type="text/css" href="css/table.css">
</head>

<body>
<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100" style="width: 90%"> <!--Each of these divs is a single column, this first one is a basic information display with values from database-->
			<span class="login100-form-title"  style="padding-bottom: 10px; padding-top: 0px;">
				Students
			</span>
			<div>
				<table id="studenttable">
					<tbody>
					<tr>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Student Number</th>
						<th>GPA</th>
						<th>Education Plan</th>
						<th>Top College</th>
						<th>Major</th>
						<th>Career Path</th>
						<th>NCAA</th>
						<th>First Gen</th>
						<th>Online Learning</th>
						<th>Ethnicity</th>
					</tr>
					@foreach(var student in Model.Students)
					{
						<tr email="@student[12]">
							<td>@student[0]</td>
							<td>@student[1]</td>
							<td>@student[2]</td>
							<td>@student[3]</td>
							<td>@student[4]</td>
							<td>@student[5]</td>
							<td>@student[6]</td>
							<td>@student[7]</td>
							<td>@student[8]</td>
							<td>@student[9]</td>
							<td>@student[10]</td>
							<td>@student[11]</td>
						</tr>
					}
					</tbody>
				</table>
			</div>
			<div class="container-counselor-btn container-top">
				<div class="wrap-input100 counselor-btn" style="width:80%;">
                    <input class="input100" type="text" id="search" onkeyup="search()"/>
                    <span class="focus-input100" data-placeholder="Search..."></span>
                </div>
				<div class="wrap-input100 counselor-btn" style="width:20%;">
					<select class="input100 select" id="searchby" onchange="search()">
						<option value="0">First Name</option>
						<option value="1">Last Name</option>
						<option value="2">Student Number</option>
						<option value="3">GPA</option>
						<option value="4">Education Plan</option>
						<option value="5">Top College</option>
						<option value="6">Major</option>
						<option value="7">Career Path</option>
						<option value="8">NCAA</option>
						<option value="9">First Gen</option>
						<option value="10">Online Learning</option>
						<option value="11">Ethnicity</option>
					</select>
					<span class="focus-input100 focus-input100-reverse" data-placeholder="Search By..."></span>
				</div>
			</div>
			<div class="container-counselor-btn">
				<div class="container-login100-form-btn counselor-btn">
					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button class="login100-form-btn" onclick="selectAll()">
							Select All
						</button>
					</div>
				</div>
				<div class="container-login100-form-btn counselor-btn">
					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button class="login100-form-btn" onclick="deselect()">
							Deselect All
						</button>
					</div>
				</div>
				<div class="container-login100-form-btn counselor-btn">
					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button class="login100-form-btn" onclick="emailSelected()">
							Email Selected
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="js/jquery/jquery-3.2.1.min.js"></script>
<script src="js/main.js"></script>
<script src="js/table.js"></script>
</body>